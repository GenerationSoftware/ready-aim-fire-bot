{
	"name": "bot",
	"version": "0.0.0",
	"private": true,
	"bin": {
		"battle-bot": "./dist/index.js"
	},
	"scripts": {
		"build": "tsc -p tsconfig.node.json",
		"build:watch": "tsc -p tsconfig.node.json --watch",
		"start": "ts-node -P tsconfig.node.json src/index.ts start",
		"cli": "ts-node -P tsconfig.node.json src/index.ts",
		"dev:node": "npm start",
		"test": "vitest",
		"test:run": "vitest --run",
		"test:watch": "vitest"
	},
	"devDependencies": {
		"@types/node": "^20.0.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.5.2",
		"vitest": "^1.3.1",
		"wrangler": "^4.19.1"
	},
	"dependencies": {
		"commander": "^11.0.0",
		"dotenv": "^16.0.0",
		"pino": "^8.19.0",
		"pino-pretty": "^10.3.1",
		"viem": "^2.30.6"
	}
}
